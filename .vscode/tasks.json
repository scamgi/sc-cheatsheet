{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Cheatsheet (latexmk)",
            "type": "shell",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-output-directory=out",
                "main.tex"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            // Usa il problem matcher di VS Code per trovare errori e warning di LaTeX
            "problemMatcher": [
                "$latex-pvc"
            ]
        },
        {
            "label": "Clean Auxiliary Files",
            "type": "shell",
            "command": "latexmk -C main.tex && rm -rf out",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}